description "Openchange notification service"
author      "Samuel Cabrero <scabrero@zentyal.com>"

start on (local-filesystems and net-device-up)
stop on runlevel [!2345]

normal exit 0

pre-start script
    [ -f /etc/openchange/notification-service.cfg ] || { stop; exit 0; }
end script

exec /usr/sbin/ocnotification -d
